{%include 'header.twig'%}

    <main role="main" data-relurl="{{ FM_REL_PATH }}">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="page-header">{{ header }}</h1>
                    <h2 class="main-message text-success"></h2>
                    {% if breadcrumbs %}
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/src/">Home</a></li>
                                {% autoescape false %}
                                    {{ breadcrumbs }}
                                {% endautoescape %}    
                            </ol>
                        </nav>
                    {% endif %}
                </div>
            </div> 
            <div class="row">
                <div class="col-12">
                    <table class="table table-dark text-center" id="table_files">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col" class="text-left">Name</th>
                                <th scope="col">Size</th>
                                <th scope="col">Date of change</th>
                                <th scope="col">Rename</th>
                                <th scope="col">Copy</th>
                                <th scope="col">Move</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            {%include 'table_files.twig'%} 
                        </tbody>
                    </table>        
                </div>
            </div>  
        </div>
    </main>    

{%include 'footer.twig'%}