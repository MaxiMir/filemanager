{%include 'header.twig'%}

<main role="main" data-relurl="{{ FM_REL_PATH }}">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="page-header">{{ header }}</h1>
            <div class="main-message text-success" style="display: none;"></div>
            {% if breadcrumbs %}
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ FM_REL_PATH }}">Home</a></li>
                        {% autoescape false %}
                            {{ breadcrumbs }}
                        {% endautoescape %}
                    </ol>
                </nav>
            {% endif %}
        </div>
    </div>
    <div class="row main_content">
        <div class="col-3">
            <div class="block-list_paths" id="list_paths">
                <a href="{{ FM_REL_PATH }}" id="root" class="list-group-item list_paths-header list-group-item-dark text-white text-center font-weight-bold">{{ ROOT }}</a>
                {%include 'list_dirs.twig'%}
                <div class="list-group-item-dark text-center p-2 list_paths__btns d-none">
                    <button type="button" class="btn btn-secondary btn-sm btn-cancel" disabled>CANCEL</button>
                    <button type="submit" class="btn btn-primary btn-sm btn-ok" disabled>INSERT</button>
                </div>
            </div>
        </div>
        <div class="col-9">
            <div id="table-block">
                <table class="table table-dark text-center" id="table_files">
                    <thead>
                    <tr>
                        <th scope="col" id="checkboxControl">
                            <input type="checkbox" id="controlCheckbox" class="d-none">
                            <a href="javascript:void(0);" data-action="activateRedactor" id="activateRedactor" title="Show file operations menu">
                                <img src="{{ FM_REL_PATH }}css/img/control/check.png" width="20px" alt="Show file operations menu">
                            </a>
                        </th>
                        <th scope="col" class="text-left" colspan="2">
                            <a href="javascript:void(0);" data-orderBy="name" class="btn disabled">
                                <img src="{{ FM_REL_PATH }}/css/img/control/arrow.png" alt="sort by id" title="sort by id" width="20px">
                                Name
                            </a>
                        </th>
                        <th scope="col"></th>
                        <th scope="col">
                            <a href="javascript:void(0);" data-orderBy="size" class="btn">
                                <img src="{{ FM_REL_PATH }}css/img/control/arrow.png" alt="sort by id" title="sort by id" width="20px">
                                Size
                            </a>
                        </th>
                        <th scope="col">
                            <a href="javascript:void(0);" data-orderBy="date" class="btn">
                                <img src="{{ FM_REL_PATH }}css/img/control/arrow.png" alt="sort by id" title="sort by id" width="20px">
                                Date
                            </a>
                        </th>
                    </tr>
                    <tr id="actions-panel" class="d-none">
                        <th colspan="6">
                            <a href="javascript:void(0);" title="copy files" data-action="copy" class="actions-panel-item btn disabled">
                                <img src="{{ FM_REL_PATH }}css/img/control/copy.png" class="control_item" width="30px" alt="icon copy">
                                <p class="copy-text">Copy files</p>
                            </a>

                            <a href="javascript:void(0);" title="move files" data-action="move" class="actions-panel-item btn disabled">
                                <img src="{{ FM_REL_PATH }}css/img/control/move.png" class="control_item" width="30px" alt="icon move">
                                <p class="move-text">Move Files</p>
                            </a>

                            <a href="javascript:void(0);" title="delete files" data-action="delete" class="actions-panel-item btn disabled">
                                <img src="{{ FM_REL_PATH }}css/img/control/delete.png" class="control_item" width="30px" alt="icon delete">
                                <p class="delete-text">Delete Files</p>
                            </a>
                            <span id="closePanel">&#10006</span>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {%include 'table_files.twig'%}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

{%include 'footer.twig'%}